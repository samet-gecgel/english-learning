generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Word {
  id            String    @id @default(cuid())
  word          String
  translation   String
  level         String
  pronunciation String?
  usageNotes    String?
  sentences     String[]
  irregularForms Json?
  synonyms      String[]
  antonyms      String[]
  wordFamily    String[]
  examples      Json?
  dateAdded     DateTime  @default(now())
  lastReviewed  DateTime?
  difficulty    Int       @default(1)
}

model Topic {
  id          String    @id @default(cuid())
  title       String
  description String
  category    String
  notes       Note[]
  dateCreated DateTime  @default(now())
  lastUpdated DateTime?
}

model Note {
  id          String   @id @default(cuid())
  content     String
  dateCreated DateTime @default(now())
  topic       Topic    @relation(fields: [topicId], references: [id], onDelete: Cascade)
  topicId     String
}

model JournalEntry {
  id               String   @id @default(cuid())
  date             DateTime
  title            String
  content          String
  mood             String
  learningProgress Json
  tags             String[]
  createdAt        DateTime @default(now())
} 